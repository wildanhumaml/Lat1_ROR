<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr class="header">
      <th>Name</th>
      <th>Address</th>
      <th>Email</th>
      <th>Pay Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td><%= order.name %></td>
        <td><%= order.address %></td>
        <td><%= order.email %></td>
        <td><%= order.pay_type %></td>

        <td class="list_actions">
          <%= link_to 'Show', order %><br/>
          <%= link_to 'Edit', edit_order_path(order) %><br/>
          <%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %><br/>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

