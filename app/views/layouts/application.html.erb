<!DOCTYPE html>
<html>
  <head>
    <title>Pragprog Books Online Store</title>
    <%= csrf_meta_tags %>

    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="<%= controller.controller_name %>">
    <div id="banner">
    	<div id="img2"><%= image_tag 'logo.png', alt: 'The Pragprog Bookshelf', :size => "350x120" %></div>
    	<span class="title"><%= @page_title %></span>
    </div>
    <div id="columns">
	    <div id="side">
	    	<!-- <% if @cart %> -->
	    <div id="cart">
	    	<% if @cart %>
	    		<%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
	    			<%= render @cart %>
	    		<% end %>
	    	<% end %>
	    	<!-- <% end %> -->
	    </div>

	    	<ul>
	    		<li><b><%= link_to 'Home', store_index_path %></b></li>
	    		<li><a href="#"><b>Questions</b></a></li>
	    		<li><a href="#"><b>News</b></a></li>
	    		<li><a href="#"><b>Contact</b></a></li>
	    		<li><hr/></li>
	    		<li><b><%= link_to 'Products', products_path %></b></li>
	    	</ul>
	    </div>
	    <div id="main">
	    	<%= yield %>
	    </div>
	</div>
  </body>
</html>
