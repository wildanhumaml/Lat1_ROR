<% unless cart.line_items.empty? %>
<h2> > Your Cart</h2>
<table>
	<%= render(cart.line_items) %>
	<tr class="total_line">
		<td colspan="2" id="space"><b>(+) Total :</b></td>
		<td class="total_cell"><%= to_rupiah(cart.total_price) %></td>
	</tr>
</table>

<%= button_to 'Empty cart', cart, method: :delete,
	data: { confirm: 'Are you sure..?' } %>

<% end %>

<hr/>