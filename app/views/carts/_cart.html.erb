<% unless cart.line_items.empty? %>
<h2> > <%= t('.title') %></h2>
<table class="top">
	<%= render(cart.line_items) %>
	<tr class="total_line">
		<td colspan="2" id="space"><b>(+) Total :</b></td>
		<td class="total_cell"><%= number_to_currency(cart.total_price) %></td>
	</tr>
</table>

<table class="btm">
	<tr>
		<td><%= button_to t('.checkout'), new_order_path, method: :get %></td>
		<td>
			<%= button_to t('.empty'), cart, method: :delete,
				data: { confirm: 'Are you sure..?' } %>
		</td>
	</tr>
</table>

<% end %>

<hr/>